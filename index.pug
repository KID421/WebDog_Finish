mixin CreateBox(title, content, button, imgName, contentDir, pictureDir)
    .box
        .content(class=contentDir)
            h1=title
            p=content
            a(href="#" class="button")=button
        .picture(class=pictureDir)
            img(src=imgName)
    
mixin CreateTitle(id, title, content)
    .title(id=id)
        h1=title
        p=content

mixin CreatePrice(className, count, title, price)
    .priceBox(class=className)
        .icon
            - for (var i=0; i<count; i++)
                span #[img(src="icon.png")]
        h2=title
        h3 #[=price]#[span / year]
        ul
            li 寵物講座
            li 飼料試吃包
            li 寵物寫真
            li 寵物旅館
            li 寵物健康檢查
        a(href="#" class="button") 購買

